<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recommend.treatmentDetails.DetailTreatmentLeaf">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="250dp"
            android:textSize="12sp"
            android:fontFamily="@font/interregular"
            android:textColor="@color/black"
            android:text="@string/details_leaf"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_leaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/interbold"
        android:layout_centerHorizontal="true"
        android:text="@string/gray_leaf_spot"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_leaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_leaf"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/btn_leaf"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/image_leaf"/>
    </androidx.cardview.widget.CardView>



</RelativeLayout>